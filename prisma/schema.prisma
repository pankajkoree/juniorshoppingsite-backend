generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  tokens    Token[]
}

model Token {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  token     String
  createdAt DateTime @default(now())

  // Relation
  user User @relation(fields: [userId], references: [id])

  @@index([createdAt], map: "TokenCreatedAtIndex")
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  category    String

  price             Float
  discoutPercentage Float
  rating            Float
  stock             Int

  brand  String
  sku    String @unique
  weight Int

  tags      String[]
  images    String[]
  thumbnail String

  warrantyInformation  String
  shippingInformation  String
  returnPolicy         String
  availabilityStatus   String
  minimumOrderQuantity Int

  barcode String
  qrCode  String

  dimensions Dimensions?
  meta       Meta?

  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dimensions {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  width  Float
  height Float
  depth  Float

  productId String  @unique @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Meta {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  createdAt DateTime
  updatedAt DateTime

  productId String  @unique @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Review {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  rating   Float
  comment  String
  reviewer String

  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
